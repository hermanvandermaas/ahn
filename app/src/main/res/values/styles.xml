<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
	</style>

	<style name="transparent_toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
		<item name="background">@android:color/transparent</item>
		<!-- Used to for the title of the Toolbar -->
		<item name="android:textColorPrimary">@color/primary_dark</item>
		<!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
		<item name="android:textColorPrimaryInverse">@color/primary_dark</item>
		<!-- Used to color the text of the action menu icons -->
		<item name="android:textColorSecondary">@color/primary_dark</item>
		<!-- Used to color the overflow menu icon -->
		<item name="actionMenuTextColor">@color/primary_dark</item>
	</style>
	
	<style name="overflow_menu" parent="ThemeOverlay.AppCompat.Light">
	</style>
	
	<style name="text_title" parent="TextAppearance.AppCompat.Title">
		<item name="android:textSize">16sp</item>
	</style>
	
	<style name="text_body" parent="TextAppearance.AppCompat.Body1">
		<item name="android:textColorPrimary">@color/primary_dark</item>
		<!--<item name="android:textSize">16sp</item>-->
	</style>
	
	<style name="navigation_drawer" parent="ThemeOverlay.AppCompat.Light">
	</style>
	
	<style name="layers_menu_title" parent="ThemeOverlay.AppCompat.Light">
		<item name="android:textSize">16sp</item>
		<item name="android:paddingBottom">16dp</item>
	</style>
	
	<style name="layer_checkbox" parent="ThemeOverlay.AppCompat.Light">
		<item name="android:layout_marginTop">12dp</item>
		<item name="android:paddingBottom">4dp</item>
	</style>
	
	<style name="layer_seekbar" parent="ThemeOverlay.AppCompat.Light">
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:paddingBottom">12dp</item>
	</style>
	
	<style name="welcome_dialog_image" parent="ThemeOverlay.AppCompat.Light">
		<item name="android:layout_marginTop">20dp</item>
	</style>
	
	<style name="welcome_dialog_container" parent="ThemeOverlay.AppCompat.Light">
		<item name="android:paddingTop">24dp</item>
		<item name="android:paddingLeft">24dp</item>
		<item name="android:paddingRight">24dp</item>
	</style>
	
	<style name="welcome_dialog_checkbox" parent="ThemeOverlay.AppCompat.Light">
		<item name="android:layout_marginTop">0dp</item>
	</style>
	
	
	
</resources>
