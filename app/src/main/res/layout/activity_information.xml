<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/coordinator_info"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar_info"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:theme="@style/white_toolbar"
			app:popupTheme="@style/overflow_menu"
			app:layout_scrollFlags="scroll|enterAlways" />
			
	</android.support.design.widget.AppBarLayout>

	<android.support.v4.widget.NestedScrollView
		android:id="@+id/nestedscrollview_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal">

			<LinearLayout
				style="@style/activity_info_max_width"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_centerHorizontal="true">

				<TextView
					style="@style/activity_info_text_title"
					android:text="@string/hoogtekaart_title" />

				<TextView
					style="@style/activity_info_text_body"
					android:text="@string/hoogtekaart_body" />
				
				<TextView
					style="@style/activity_info_text_title"
					android:text="@string/hoogte_weergeven_title" />

				<TextView
					style="@style/activity_info_text_body"
					android:text="@string/hoogte_weergeven_body" />
				
				<TextView
					style="@style/activity_info_text_title"
					android:text="@string/kaartlagen_title" />

				<TextView
					style="@style/activity_info_text_body"
					android:text="@string/kaartlagen_body" />
				
				<TextView
					style="@style/activity_info_text_title"
					android:text="@string/kaart_delen_title" />

				<TextView
					style="@style/activity_info_text_body"
					android:text="@string/kaart_delen_body" />
				
				<TextView
					style="@style/activity_info_text_title"
					android:text="@string/over_ahn_title" />

				<TextView
					style="@style/activity_info_text_body"
					android:text="@string/over_ahn_body" />
				
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:maxWidth="@dimen/ahn3kaart_max_width"
					android:gravity="center_horizontal"
					android:scaleType="fitCenter"
					android:src="@drawable/ahn3jarenkaart"
					android:adjustViewBounds="true" />
				
				<TextView
					style="@style/activity_info_text_title"
					android:text="@string/bronvermelding_title" />

				<TextView
					style="@style/activity_info_text_body"
					android:text="@string/bronvermelding_body" />
			</LinearLayout>
		</LinearLayout>
	</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>

